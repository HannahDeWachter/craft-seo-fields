{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("studioespresso\\seofields\\assetbundles\\SeoFieldAsset") %}

<div class="tabs">
    {{ dd() }}
    {% set tabSelected = false %}
    {% if field.tabs.general %}
        {% if not field.tabs.facebook or field.tabs.twitter %}
            {% set tabSelected = true %}
        {% endif %}
        {% include 'seo-fields/_components/fields/_tabs/_general.twig' with { tabSelected : tabSelected}  %}
    {% endif %}
    {% if field.tabs.facebook %}
        {% include 'seo-fields/_components/fields/_tabs/_facebook.twig' with { tabSelected : tabSelected}  %}
    {% endif %}
    {% if field.tabs.twitter %}
        {% include 'seo-fields/_components/fields/_tabs/_twitter.twig' with { tabSelected : tabSelected}  %}
    {% endif %}
</div>


