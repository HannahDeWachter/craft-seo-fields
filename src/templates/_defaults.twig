{% extends 'seo-fields/_includes/_header' %}

{% import "_includes/forms" as forms %}
{% block content %}
    <input type="hidden" name="action" value="seo-fields/default/save">

    {{ forms.textField({
        label: 'Default site title'|t('seofields'),
        id: 'defaultSiteTitle',
        name: 'defaultSiteTitle',
        size: 80,
        value: data['defaultSiteTitle']})
    }}

    {{ forms.textField({
        label: 'Title seperator'|t('seofields'),
        instructions: 'A character used to seperate your `<title>` from the site name'|t('seofields'),
        id: 'titleSeperator',
        name: 'titleSeperator',
        size: 3,
        value: data['titleSeperator']})
    }}
{% endblock %}